{
  "name": "Appn Tasker",
  "description": "This is an extension for a google chrome that have your tasks, so you can add them, change them, delete them etc.",
  "version": "1.0",
  "manifest_version": 3,

  "permissions": ["storage", "activeTab", "scripting", "<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/images/logo16.png",
      "32": "/images/logo32.png",
      "48": "/images/logo48.png",
      "128": "/images/logo128.png"
    }
  },
  "icons": {
    "16": "/images/logo16.png",
    "32": "/images/logo32.png",
    "48": "/images/logo48.png",
    "128": "/images/logo128.png"
  },
  "options_page": "options.html"
}